import Task_03
def update_text(hw):
    hw1 = hw.lower()
    hw2 = hw1.replace(' iz ', ' is ')
    hw3 = hw2.replace('\n\n', '')
    hw4 = hw3.split('.')

    cap_sen = []
    for sentence in hw4:
        capitalized_sentence = sentence.strip().capitalize()
        cap_sen.append(capitalized_sentence)

    hw5 = '. '.join(cap_sen).replace(' .', '.').rstrip()
    return hw5
